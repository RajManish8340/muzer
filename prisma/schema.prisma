generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique

  rooms Room[]
}

model Room {
  id   Int    @id @default(autoincrement())
  name String

  adminId Int
  admin   User @relation(fields: [adminId], references: [id])

  playlist Playlist?
}

model Playlist {
  id   Int    @id @default(autoincrement())
  name String

  roomId Int  @unique
  room   Room @relation(fields: [roomId], references: [id])

  songs Song[]
}

model Song {
  id    Int     @id @default(autoincrement())
  title String
  url   String?

  playlistId Int
  playlist   Playlist @relation(fields: [playlistId], references: [id])
}

